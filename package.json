{
  "name": "eslint-disable-scanner",
  "version": "1.1.0",
  "description": "A tool to check for disabled ESLint rules in JavaScript/TypeScript projects.",
  "keywords": [
    "eslint",
    "eslint-disable",
    "checker",
    "javascript",
    "typescript"
  ],
  "author": "Coding Journey s <codingjourney.site@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "eslint-disable-scanner": "dist/cli.js"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rm -rf dist && tsc",
    "lint": "eslint .",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "prepare": "husky"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.0",
    "@types/glob": "^8.1.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^4.0.0",
    "typescript-eslint": "^8.35.1"
  },
  "engines": {
    "node": ">=16"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khoativi/eslint-disable-scanner.git"
  },
  "bugs": {
    "url": "https://github.com/khoativi/eslint-disable-scanner.git/issues"
  },
  "homepage": "https://github.com/khoativi/eslint-disable-scanner.git#readme"
}
